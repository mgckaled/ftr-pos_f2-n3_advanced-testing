{
	"name": "f2_n3_advanced-testing",
	"version": "1.0.0",
	"author": "Marcel Kaled",
	"description": "This project contains advanced testing techniques using TypeScript, Mocha, Chai, Sinon, and C8 for code coverage. It demonstrates best practices for writing unit tests, integration tests, and end-to-end tests in a TypeScript environment.",
	"keywords": [
		"testing",
		"typescript",
		"mocha",
		"chai",
		"sinon",
		"c8",
		"coverage",
		"tdd",
		"cd/ci"
	],
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "ts-node src/index.ts",
		"clean": "rm -rf dist",
		"prebuild": "npm run clean",
		"build": "tsc",
	  "test": "cross-env NODE_OPTIONS=--loader=ts-node/esm mocha",
    "coverage": "c8 npm run test",
    
    "test:p1": "cross-env NODE_OPTIONS=--loader=ts-node/esm mocha --no-config --extension ts --timeout 5000 --recursive tests/p1",
    "test:p2": "cross-env NODE_OPTIONS=--loader=ts-node/esm mocha --no-config --extension ts --timeout 5000 --recursive tests/p2",
    "test:p3": "cross-env NODE_OPTIONS=--loader=ts-node/esm mocha --no-config --extension ts --timeout 5000 --recursive tests/p3",
    
    "coverage:p1": "c8 --include=src/p1/**/*.ts --report-dir=./coverage/p1 npm run test:p1",
    "coverage:p2": "c8 --include=src/p2/**/*.ts --report-dir=./coverage/p2 npm run test:p2",
    "coverage:p3": "c8 --include=src/p3/**/*.ts --report-dir=./coverage/p3 npm run test:p3",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"packageManager": "pnpm@10.19.0",
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@types/chai": "^5.2.3",
		"@types/express": "^5.0.3",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.9.1",
		"@types/sinon": "^17.0.4",
		"c8": "^10.1.3",
		"chai": "^6.2.0",
		"cross-env": "^10.1.0",
		"mocha": "^11.7.4",
		"sinon": "^21.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"express": "^5.1.0"
	}
}
